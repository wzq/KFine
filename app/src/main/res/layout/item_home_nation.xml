<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/div_home_list"
    android:orientation="horizontal"
    android:showDividers="middle|beginning|end"
    android:gravity="center_vertical">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/home_nation_jp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="@color/accent"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleFadeDuration="75">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="日本馆"
                android:textColor="@color/secondary_text"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/japan_flag"/>
        </com.balysv.materialripple.MaterialRippleLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/home_nation_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="@color/accent"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleFadeDuration="75">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="美国馆"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="16dp"
                android:drawableLeft="@drawable/usa_flag"
                android:drawablePadding="8dp"/>
        </com.balysv.materialripple.MaterialRippleLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>