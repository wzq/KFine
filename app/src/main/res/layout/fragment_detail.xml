<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/detail_t"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_loading"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/detail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_t"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            tools:text="测试标题  测试标题  测试标题  测试标题  " />

        <TextView
            android:id="@+id/detail_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_title"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:textColor="@color/thirdly_text"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:text="5件起拍  首单免邮  限购5件"/>

        <TextView
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_limit"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/accent"
            android:textSize="18sp"
            tools:text="¥5123.00" />

        <TextView
            android:id="@+id/detail_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detail_price"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/detail_price"
            android:textColor="@color/thirdly_text"
            android:textSize="12sp"
            tools:text="¥5123.00" />

        <TextView
            android:id="@+id/detail_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detail_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/thirdly_text"
            android:textSize="12sp"
            tools:text="美国亚马逊" />

        <View
            android:id="@+id/detail_t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_price"
            android:layout_marginTop="8dp"
            android:background="@drawable/div_line" />

        <TextView
            android:id="@+id/detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_t2"
            android:padding="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:text="测试内容测试内容测试内容测试内容测试内容测试内容测试内容" />

    </RelativeLayout>


</ScrollView>